{
  "name": "evermind-domain",
  "version": "0.1.0",
  "description": "Domain code for evermind",
  "type": "module",
  "main": "build/index.js",
  "exports": {
    ".": "./build/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "start": "node --loader tsm ./src/delivery/rest-api/run.ts",
    "start:dev": "nodemon ./src/delivery/rest-api/run.ts --exec tsm",
    "tests": "uvu -r tsm tests",
    "tsc:watch": "tsc --noEmit --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ferllop/evermind-domain.git"
  },
  "keywords": [
    "evermaind",
    "domain"
  ],
  "author": "Ferran Llop Alonso",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ferllop/evermind-domain/issues"
  },
  "homepage": "https://github.com/ferllop/evermind-domain#readme",
  "devDependencies": {
    "@tsconfig/node16": "1.0.2",
    "@types/express": "4.17.13",
    "@types/node": "16.4.10",
    "@types/pg": "8.6.4",
    "@types/pg-format": "1.0.2",
    "@types/supertest": "2.0.11",
    "nodemon": "2.0.15",
    "supertest": "6.2.2",
    "tsm": "2.2.1",
    "typescript": "4.5.5",
    "uvu": "0.5.3"
  },
  "dependencies": {
    "express": "4.17.3",
    "in-memory-database": "github:ferllop/in-memory-typescript-database#semver:1.x.x",
    "jsonwebtoken": "8.5.1",
    "node-postgres": "0.6.2",
    "pg": "8.7.1",
    "pg-format": "1.0.4",
    "preconditions": "github:ferllop/preconditions#semver:2.0.1"
  }
}
